<UserControl x:Class="Components.InputComponents.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary Source="StylesForInputComponent.xaml"/>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
            <Label Content="{Binding LabelContent}" 
                Style="{StaticResource Style_Label}"/>
            <TextBox Text="{Binding InputText}"
                Style="{StaticResource Style_Input}"/>
    </StackPanel>
</UserControl>
